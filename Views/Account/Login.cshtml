@model AppointmentScheduler.Models.ViewModels.LoginViewModel

<h2>Sign In</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            <form id="account" method="post" asp-controller="Account" asp-action="Login" >
                <h4>Use your registered email id and password to login.</h4>
                <hr />

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="col-md-2" asp-for="Email"></label>

                </div>
            </form>
        </section>
    </div>
</div>
